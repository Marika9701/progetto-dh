         <div>
            <table cols="2">
               <row>
                  <cell>LA NOTTE BELLA</cell>
                  <cell>LA NOTTE BELLA</cell>
               </row>
               <row>
                  <cell>
                     <lg>
                        <l n="1">Quale canto s’è levato stanotte</l>
                        <l n="2">che intesse</l>
                        <l n="3">di cristallina eco del cuore</l>
                        <l n="4"><app>
                              <rdg><hi>l’illuminazione del cielo?</hi></rdg>
                           </app></l>
                     </lg>
                     <lg>
                        <l n="5">Quale festa sorgiva</l>
                        <l n="6">di cuore a nozze<app>
                              <rdg><hi>?</hi></rdg>
                           </app></l>
                     </lg>
                     <lg>
                        <l n="7"><app>
                              <rdg><hi>D’ora in poi</hi></rdg>
                           </app></l>
                        <l n="8"><app>
                              <rdg><hi>confidenziale</hi></rdg>
                           </app></l>
                        <l n="9"><app>
                              <rdg><hi>mi genera</hi></rdg>
                           </app></l>
                        <l n="10"><app>
                              <rdg><hi>ogni attimo d’universo</hi></rdg>
                           </app></l>
                     </lg>
                     <lg>
                        <l n="11">Sono stato</l>
                        <l n="12">uno stagno</l>
                        <l n="13">di buio </l>
                     </lg>
                     <lg>
                        <l n="14"><app>
                              <rdg><hi>Comparso allo spazio</hi></rdg>
                           </app>
                        </l>
                        <l n="15"><app>
                              <rdg><hi>l’ho morso</hi></rdg>
                           </app>
                        </l>
                        <l n="16"><app>
                              <rdg><hi>come un neonato</hi></rdg>
                           </app>
                        </l>
                        <l n="17"><app>
                              <rdg><hi>la mammella</hi></rdg>
                           </app></l>
                     </lg>
                     <lg>
                        <l n="18">Ora<app>
                              <rdg><hi>sono delicato</hi></rdg>
                           </app></l>
                     </lg>
                     <lg>
                        <l n="19">Sono ubriaco d’universo</l>
                     </lg>
                     <lg>
                        <l n="20"><app>
                              <rdg><hi>Col mare mi son fatto</hi></rdg>
                           </app></l>
                        <l n="21"><app>
                              <rdg><hi>una bara</hi></rdg>
                           </app>
                        </l>
                        <l n="22"><app>
                              <rdg><hi>di freschezza</hi></rdg>
                           </app>
                        </l>
                     </lg>
                  </cell>
                  <cell>
                     <lg>
                        <l n="1">Quale canto s’è levato stanotte</l>
                        <l n="2">che intesse</l>
                        <l n="3">di cristallina eco del cuore</l>
                        <l n="4"><app>
                              <rdg><hi>le stelle</hi></rdg>
                           </app></l>
                     </lg>
                     <lg>
                        <l n="5">Quale festa sorgiva</l>
                        <l n="6">di cuore a nozze</l>
                     </lg>
                     <lg>
                        <l n="7">Sono stato</l>
                        <l n="8">uno stagno di buio </l>
                     </lg>
                     <lg>
                        <l n="9"><app>
                              <rdg><hi>Ora mordo</hi></rdg>
                           </app></l>
                        <l n="10"><app>
                              <rdg><hi>come un bambino la mammella</hi></rdg>
                           </app>
                        </l>
                        <l n="11"><app>
                              <rdg><hi>lo spazio</hi></rdg>
                           </app></l>
                     </lg>
                     <lg>
                        <l n="12">Ora sono ubriaco </l>
                        <l n="13">d’universo</l>
                     </lg>
                  </cell>
               </row>
